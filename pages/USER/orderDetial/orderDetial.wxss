.address_wrap {position: relative; display: flex; flex-wrap: wrap; padding: 20rpx 90rpx 20rpx 26rpx; margin-bottom: 16rpx; background-color: #fff; font-size: 34rpx;}
.address_wrap .top {display: flex; width: 100%; justify-content: space-between; font-size: 30rpx;}
.address_wrap .bottom {font-size: 30rpx;}
.address_wrap .icon {position: absolute; width: 24rpx; height: 44rpx; right: 26rpx; top: 50%; transform: translateY(-50%);}

.content_ul {background-color: #fff;}
.content_ul .content_li {padding: 12rpx 26rpx;}
.content_ul .content_li .img {float: left; width: 200rpx; height: 200rpx;}
.content_ul .content_li .img image {width: 100%; height: 100%;}
.content_ul .content_li .con {float: right; width: 474rpx;}
.content_li .con .tit {height: 90rpx;}
.content_li .con .isbaoy {margin-top: 26rpx; font-size: 26rpx; color: #a3a3a3; word-spacing: 1em;}
.content_li .con .msg {display: flex; align-items: baseline;}
.content_li .con .msg text:nth-child(1) {color: #E72839; font-size: 30rpx;}
.content_li .con .msg text:nth-child(2) {color: #a3a3a3; font-size: 24rpx; margin-left: 20rpx; text-decoration: line-through;}
.content_li .con .msg text:nth-child(3) {color: #a3a3a3; width: 200rpx; display: flex; font-size: 28rpx; flex: 1; justify-content: flex-end;}

.content_li_wrap {background-color: #f7f7f7;}
.content_li_wrap .aside {background-color: #fff;}
.content_li_wrap .aside .top {display: flex; align-items: center; height: 78rpx; border-bottom: 1px solid #c4c4c4; padding-left: 26rpx;}
.content_li_wrap .aside .bottom {display: flex; justify-content: space-between; align-items: center; height: 78rpx; padding-right: 26rpx;}
.content_li_wrap .aside .bottom text {padding: 15rpx 26rpx; font-size: 30rpx;}
.content_li_wrap .aside .bottom text.active {color: #E72839;}

.prduct_info_wrap {background-color: #fff; margin: 16rpx 0 0rpx; padding: 26rpx 26rpx 100rpx;}
.prduct_info_wrap view {font-size: 24rpx; color: #9c9c9c; display: flex;}
.prduct_info_wrap view text {width: 5.3em;}
.prduct_info_wrap view text.copy {font-size: 24rpx; width: 3.5em; margin-left: 20rpx; border-radius: 4rpx; border: 1rpx solid #c4c4c4; text-align:center}
.footer {position:fixed; left: 0; bottom: 0; width: 100%; height: 88rpx; border-top: 1px solid #c4c4c4; background-color: #fff; display: flex; justify-content: flex-end; align-items: center;}
.footer text,
.footer .call {display: inline-block; min-width: 4em; padding: 0 26rpx; height: 100%; font-size: 30rpx; display: flex; align-items: center; justify-content: center; position: relative;}
.footer text.bg_black {background-color: #1EBC72; color: #fff; width: 120rpx;}
.footer .call contact-button {position: absolute; opacity: 0; left: 50%; top: 50%; transform: translate3d(-50%, -50%, 0); background: red;}