.list_wrap {padding-left: 26rpx;}
.list_wrap .list {position: relative; display: flex; align-items: center; height: 100rpx; border-bottom: 1px solid #c4c4c4;}
.list_wrap .list text {width: 130rpx;}
.list_wrap .list input {width: 500rpx; color: #8a8a8a;}
.list_wrap .list .icon {position: absolute; width: 24rpx; height: 44rpx; right: 26rpx; top: 50%; transform: translateY(-50%);}

.list_wrap .list .verify_code {width: 200rpx; height: 60rpx; }

.address_wrap {display: flex; width: 100%;}
.address_wrap view {width: 30%;}
.picker_wrap {min-width: 500rpx; height: 100rpx; line-height: 100rpx;}

.footer {display: flex; position: fixed; z-index: -1; bottom: 0; left: 0; width: 100%; font-size: 32rpx; color: #fff; height: 88rpx; background-color: #333; border-radius: 0; justify-content: center; align-items: center;}
