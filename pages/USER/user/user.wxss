.userinfo_wrap {padding: 20rpx 26rpx 60rpx 26rpx; background-color: #1EBC72;}

.userinfo {position: relative; display: flex; height: 125rpx; }
.userinfo .img {width: 125rpx; height: 125rpx; border-radius: 50%; overflow: hidden; margin-right: 20rpx; background-color: #f7f7f7;}
.userinfo .info {display: flex; height: 125rpx; flex-direction: column; justify-content: center; align-items: flex-start;}
.userinfo .info .name {color: #fff; font-size: 34rpx; }
.userinfo .info .sex {display: flex; align-items: center; color: #666; }
.userinfo .info .sex text {font-size: 32rpx;}
.userinfo .info .sex view {width: 30rpx; height: 30rpx; margin: 8rpx 0 0 10rpx;}
.userinfo .info .balance {display: flex; flex-direction: column; position: absolute; right: 116rpx; top: 50%; transform: translateY(-50%);}
.userinfo .info .balance text:nth-child(1) {font-size: 30rpx; color: #e92839; font-size: 32rpx; font-weight: bold; text-align: center;}
.userinfo .info .balance text:nth-child(2) {font-size: 30rpx; color: #666; text-align: center;}
.userinfo .info .kefu_wrap {position: absolute; width: 100rpx; height: 100rpx; right: 10rpx; top: 5%; transform: translateY(-50%);}
.userinfo .info .kefu_wrap image {width: 46rpx; height: 46rpx; margin: 30rpx auto 0;}
/* .userinfo .info .kefu_wrap contact-button {position: absolute; width: 100%; height: 100%; left: 0; top: 0; opacity: 0;} */
.userinfo .info .kefu_wrap button {position: absolute; width: 100%; height: 100%; left: 0; top: 0; opacity: 0;}
/* .userinfo .info .balance text {position: absolute; right: 50rpx; top: 50%; transform: translateY(-50%);} */

.userinfo .icon_jump {position: absolute; right: 0rpx; width: 24rpx; height: 45rpx; top: 50%; transform: translateY(-50%); }

.list_wrap {background-color: #fff; margin: 16rpx 0; padding: 0 0 0 26rpx;}
.list {position: relative; border-bottom: 1rpx solid #c4c4c4; height: 100rpx; display: flex; justify-content: space-between; align-items: center;}
.list .left {display: flex; align-items: center;}
.list .left .icon {width: 38rpx; height: 38rpx; margin-right: 14rpx;}
.list .left .name {font-size: 30rpx; color: #333;}
.list .right {margin-right: 66rpx; color: #9c9c9c;}
.list .icon_jump {position: absolute; right: 26rpx; width: 16rpx; height: 28rpx; top: 50%; transform: translateY(-50%);}

.order_wrap {display: flex; padding: 0 26rpx; background-color: #fff; height: 180rpx;}
.order {width: 25%; display: flex; flex-direction: column; align-items: center; justify-content: center;}
.order .icon {width: 68rpx; height: 68rpx; margin-bottom: 20rpx;}
