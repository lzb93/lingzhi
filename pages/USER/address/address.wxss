
.address_wrap {position: relative; display: flex; flex-wrap: wrap; padding: 20rpx 26rpx; padding-bottom: 0; margin-bottom: 16rpx; background-color: #fff; font-size: 34rpx;}
.address_wrap .top {display: flex; width: 100%; margin-bottom: 10rpx; justify-content: space-between; font-size: 30rpx;}
.address_wrap .bottom {font-size: 30rpx;}
.action_wrap {display: flex; justify-content: space-between; align-items: center; margin-top: 20rpx; width: 100%; height: 68rpx; border-top: 1rpx solid #c4c4c4;}
.action_wrap .checked {display: flex; align-items: center;}
.action_wrap .checked text {margin-left: 0.4em;}
.action_wrap .del,
.action_wrap .edit {width: 55rpx; height: 60rpx; padding: 10rpx;}
.action_wrap .edit {margin-left: 348rpx;}

.nomore_wrap {display: flex; justify-content: center; flex-direction: column; align-items: center; margin-top: 380rpx;}
.nomore_wrap view {width: 284rpx; height: 152rpx; margin-bottom: 26rpx;}

.footer {display: flex; position: fixed; bottom: 0; left: 0; width: 100%; height: 88rpx; background-color: #1EBC72; justify-content: center; align-items: center;}
.footer view {width: 44rpx; height: 44rpx;}
.footer text {padding-left: 20rpx; color: #fff; font-size: 34rpx;}