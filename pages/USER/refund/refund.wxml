<view style="padding-bottom: 140rpx;">
  <view class="form_wrap">
    <view class="list">
      <text>服务类型</text>
      <picker bindchange="typeBindPickerChange" value="{{typeIndex}}" range="{{typeList}}">
        <input style="width: 100%;" value="{{typeList[typeIndex]}}" disabled="1" type="text" placeholder="" />
      </picker>
      <view class="icon_down">
        <image mode="widthFix" src="../../../images/icon_down_f.png"></image>
      </view>
    </view>
    <view class="list">
      <text>提交原因</text>
      <picker bindchange="reasonBindPickerChange" value="{{reasonIndex}}" range="{{reasonList}}">
        <input style="width: 100%;" value="{{reasonList[reasonIndex]}}" disabled="1" type="text" placeholder="" />
      </picker>
      <view class="icon_down">
        <image mode="widthFix" src="../../../images/icon_down_f.png"></image>
      </view>
    </view>
    <view class="list">
      <text>货物状态</text>
      <radio-group class="radio-group" bindchange="swiperChange">
        <radio value="{{0}}" color="#E72839" checked/>未收到货物   
        <radio value="{{1}}" color="#E72839"/>已收到货
      </radio-group>
    </view>
    
    <view class="list">
      <text>提交数量</text>
      <input type="text" placeholder="请输入数量" value="{{num}}" bindblur="" maxlength="4" type="number"/>
    </view>
    <view class="list">
      <text>问题描述</text>
      <textarea placeholder="可在此补充说明" value="{{remarks}}" bindinput="remarksBlur" maxlength="90" />
    </view>
  </view>


  <view class="content_ul">
      <view class="content_li_wrap">
        <view class="content_li clearfix">
          <view class="img">
            <image src="{{host}}/api/goods/goodsThumImages?goods_id={{goods_list.goods_id}}"></image>
          </view>
          <view class="con">
            <view class="tit tx_ov2">{{goods_list.goods_name}}</view>
            <view class="isbaoy">{{goods_list.spec_key_name}}</view>
            <view class="msg">
              <text>￥{{goods_list.goods_price}}</text>
              <text>￥{{goods_list.market_price}}</text>
              <text>x {{goods_list.goods_num}}</text>
            </view>
          </view>
        </view>
        <view class="aside">
          <!-- <view class="top">共计{{result.goods_list.length}}件商品 合计：￥{{result.total_amount}}（含运费￥{{result.shipping_price}}）</view> -->
          <view class="bottom">
            <text>可退款：</text>
            <text class="active">￥{{goods_list.goods_price}}</text>
          </view>
        </view>
      </view>
    </view>
