.form_wrap {padding: 26rpx 26rpx 0;}
.form_wrap .list {display: flex; margin-bottom: 24rpx; position: relative;}
.form_wrap .list text {width: 20%; height: 68rpx; display: flex; align-items: center;}
.form_wrap .list picker {width: 80%;}
.form_wrap .list input {width: 80%; height: 68rpx; background-color: #fff; display: flex; align-items: center; padding-left: 24rpx; border: 1px solid #c4c4c4; box-sizing: border-box;}
.form_wrap .list textarea {width: 80%; height: 140rpx;  background-color: #fff; display: flex; border: 1px solid #c4c4c4; box-sizing: border-box;}
.form_wrap .list .icon_down {position: absolute; z-index: 9; width: 32rpx; right: 20rpx; top: 50%; transform: translateY(-50%);}
.form_wrap .list .icon_camera {display: flex; justify-content: center; align-items: center; width: 100rpx; height: 100rpx; border:1rpx solid #c4c4c4;}
.form_wrap .list .icon_camera image {width: 35rpx;}
.form_wrap .list .image_ul {display: flex; flex-wrap: wrap;}
.form_wrap .list .image_ul view {position: relative; width: 120rpx; margin-right: 20rpx;}
.form_wrap .list .image_ul view image {}
.form_wrap .list .image_ul view icon {position: absolute; right: -12rpx; top: -12rpx;}
.form_wrap .list .radio-group radio {}

.content_ul {background-color: #fff;}
.content_ul .content_li {padding: 12rpx 26rpx;}
.content_ul .content_li .img {float: left; width: 200rpx; height: 200rpx;}
.content_ul .content_li .img image {width: 100%; height: 100%;}
.content_ul .content_li .con {float: right; width: 474rpx;}
.content_li .con .tit {height: 90rpx;}
.content_li .con .isbaoy {margin-top: 26rpx; font-size: 26rpx; color: #a3a3a3; word-spacing: 1em;}
.content_li .con .msg {display: flex; align-items: baseline;}
.content_li .con .msg text:nth-child(1) {color: #E72839; font-size: 30rpx;}
.content_li .con .msg text:nth-child(2) {color: #a3a3a3; font-size: 24rpx; margin-left: 20rpx; text-decoration: line-through;}
.content_li .con .msg text:nth-child(3) {color: #a3a3a3; width: 200rpx; display: flex; font-size: 28rpx; flex: 1; justify-content: flex-end;}

.content_li_wrap {background-color: #f7f7f7;}
.content_li_wrap .aside {background-color: #fff;}
.content_li_wrap .aside .top {display: flex; align-items: center; height: 78rpx; border-bottom: 1px solid #c4c4c4; padding-left: 26rpx;}
.content_li_wrap .aside .bottom {display: flex; justify-content: space-between; align-items: center; height: 78rpx; padding-right: 26rpx;}
.content_li_wrap .aside .bottom text {padding: 15rpx 26rpx; font-size: 30rpx;}
.content_li_wrap .aside .bottom text.active {color: #E72839;}

.prduct_info_wrap {background-color: #fff; margin: 16rpx 0 0; padding: 26rpx;}
.prduct_info_wrap view {font-size: 24rpx; color: #9c9c9c;}

.footer {position:fixed; z-index: 9; left: 0; bottom: 0; width: 100%; height: 88rpx; border-top: 1px solid #c4c4c4; background-color: #fff; display: flex; justify-content: flex-end; align-items: center;}
.footer text {display: flex; width: 50%; height: 100%; justify-content: center; align-items: center; font-size: 32rpx; color:#fff;}
.footer text:nth-child(1) {background-color: #333;}
.footer text:nth-child(2) {background-color: #9c9c9c;}