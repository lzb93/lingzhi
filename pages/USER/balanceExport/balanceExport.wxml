        <text>验证码</text>
        <input name="verify_code" value="" type="text" placeholder="验证码" maxlength="6"></input>
        <view class="verify_code" bindtap=""><image mode="widthFix" src="{{verifyCode}}"></image></view>
      </view> -->
      <button class="footer" formType="submit">提交申请</button>
    </form>
  </view>
