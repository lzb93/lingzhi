.balance_info {position: relative;}
.balance_info .img {width: 100%; height: 330rpx; background-color: #fff;}
.balance_info .info {position: absolute; top: 0; left: 0; display: flex; flex-direction: column; justify-content: center; align-items: center; width: 100%; height: 100%;}
.balance_info .info text {}
.balance_info .info text:nth-child(1) {font-size: 60rpx; font-weight: bold; color: #333;}
.balance_info .info text:nth-child(2) {font-size: 30rpx; color: #333;}

.list_wrap {background-color: rgba(0,0,0,0); padding: 0 0 0 26rpx; padding-bottom: 100rpx;}
.list {position: relative; border-bottom: 1rpx solid #c4c4c4; height: 100rpx; display: flex; justify-content: space-between; align-items: center;}
.list .left {display: flex; align-items: center;}
.list .left .icon {width: 38rpx; height: 38rpx; margin-right: 14rpx;}
.list .left .name {font-size: 30rpx;}
.list .right {margin-right: 66rpx; color: #9c9c9c;}
.list .icon_jump {position: absolute; right: 26rpx; width: 16rpx; height: 28rpx; top: 50%; transform: translateY(-50%);}

