.form_wrap {padding: 26rpx 26rpx 0;}
.form_wrap .list {display: flex; margin-bottom: 24rpx; position: relative;}
.form_wrap .list text {width: 12%; height: 68rpx; display: flex; align-items: center;}
.form_wrap .list picker {width: 88%;}
.form_wrap .list input {width: 100%; height: 68rpx; background-color: #fff; display: flex; align-items: center; padding-left: 24rpx; border: 1px solid #c4c4c4; box-sizing: border-box;}
.form_wrap .list textarea {width: 88%; height: 140rpx;  background-color: #fff; display: flex; border: 1px solid #c4c4c4; box-sizing: border-box;}
.form_wrap .list .icon_down {position: absolute; z-index: 9; width: 32rpx; right: 20rpx; top: 50%; transform: translateY(-50%);}
.form_wrap .list .icon_camera {display: flex; justify-content: center; align-items: center; width: 100rpx; height: 100rpx; border:1rpx solid #c4c4c4;}
.form_wrap .list .icon_camera image {width: 35rpx;}
.form_wrap .list .image_ul {display: flex; flex-wrap: wrap;}
.form_wrap .list .image_ul view {position: relative; width: 120rpx; margin-right: 20rpx;}
.form_wrap .list .image_ul view image {}
.form_wrap .list .image_ul view icon {position: absolute; right: -12rpx; top: -12rpx;}


.footer {position:fixed; z-index: 9; left: 0; bottom: 0; width: 100%; height: 88rpx; border-top: 1px solid #c4c4c4; background-color: #fff; display: flex; justify-content: flex-end; align-items: center;}
.footer text {display: flex; width: 50%; height: 100%; justify-content: center; align-items: center; font-size: 32rpx; color:#fff;}
.footer text:nth-child(1) {background-color: #333;}
.footer text:nth-child(2) {background-color: #9c9c9c;}