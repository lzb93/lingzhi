      <textarea placeholder="可在此补充说明" maxlength="90" />
    </view>
    <view class="list">
      <text>图片</text>
      <view class="icon_camera" bindtap="chooseImage">
        <image src="../../../images/icon_camera.png" mode="widthFix" />
      </view>
    </view>
