  <view class="form_wrap" style="margin-bottom: 120rpx;">
    <view class="list">
      <text>类型</text>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <input value="{{array[index]}}" disabled="1" type="text" placeholder="" />
      </picker>
      <view class="icon_down">
        <image mode="widthFix" src="../../../images/icon_down_f.png"></image>
      </view>
    </view>
    <view class="list">
