.content_ul {background-color: #fff;}
.content_ul .content_li {padding: 12rpx 26rpx;}
.content_ul .content_li .img {float: left; width: 200rpx; height: 200rpx;}
.content_ul .content_li .img image {width: 100%; height: 100%;}
.content_ul .content_li .con {float: right; width: 474rpx; border-bottom: 1px solid #c4c4c4;}
.content_li .con .tit {height: 90rpx;}
.content_li .con .isbaoy {display: flex; justify-content: space-between; margin-top: 10rpx; font-size: 24rpx; color: #a3a3a3;}
.isbaoy .icon_collect_wrap {width: 60rpx; height: 60rpx; margin-right: 20rpx;}
.isbaoy .icon_collect_wrap image {width: 44rpx; height: 44rpx; margin: 0 auto;}

.content_li .con .msg {display: flex;  align-items: baseline;}
.content_li .con .msg text:nth-child(1) {color: #E72839; font-size: 30rpx; vertical-align: bottom;}
.content_li .con .msg text:nth-child(2) {color: #a3a3a3; font-size: 24rpx; margin-left: 20rpx;}


