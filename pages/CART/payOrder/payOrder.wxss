
@import '../cart/cart.wxss';
.address_wrap {position: relative; display: flex; flex-wrap: wrap; padding: 20rpx 90rpx 20rpx 26rpx; margin-bottom: 16rpx; background-color: #fff; font-size: 34rpx;min-height:90rpx;}
.address_wrap .top {display: flex; width: 100%; justify-content: space-between;}
.address_wrap .bottom {}
.address_wrap .icon {position: absolute; width: 24rpx; height: 44rpx; right: 26rpx; top: 50%; transform: translateY(-50%);}
.address_wrap .icon_add {width: 80rpx; height: 80rpx;}
.address_wrap .text_add {display: flex; align-items: center; margin-left: 1em;}

.content_ul {background-color: #fff;}
.content_ul .content_li {padding: 12rpx 26rpx;}
.content_ul .content_li .img {float: left; width: 200rpx; height: 200rpx;}
.content_ul .content_li .img image {width: 100%; height: 100%;}
.content_ul .content_li .con {float: right; width: 474rpx;}
.content_li .con .tit {height: 90rpx;}
.content_li .con .isbaoy {margin-top: 26rpx; width: 100%; height: 36rpx; font-size: 24rpx; color: #a3a3a3; word-spacing: 0.6em;}
.content_li .con .msg {display: flex; align-items: baseline;}
.content_li .con .msg text:nth-child(1) {color: #E72839; font-size: 30rpx;}
.content_li .con .msg text:nth-child(2) {color: #a3a3a3; font-size: 24rpx; margin-left: 20rpx; text-decoration: line-through;}
.content_li .con .msg text:nth-child(3) {color: #a3a3a3; width: 200rpx; display: flex; font-size: 28rpx; flex: 1; justify-content: flex-end;}

.tipls_wrap {padding: 20rpx 0 0 26rpx; background-color: #fff;}
.tipls_wrap .wuliu {padding: 28rpx 0; border-bottom: 1rpx solid #c4c4c4;}
.tipls_wrap .leave_msg {display: flex; padding: 28rpx 0; border-bottom: 1rpx solid #c4c4c4;}
.tipls_wrap .leave_msg text {width: 150rpx;}
.tipls_wrap .leave_msg textarea {height: 140rpx; vertical-align: top; }

.list_wrap {background-color: #fff; padding: 0 0 0 26rpx; padding-bottom: 100rpx;}
.list {position: relative; border-bottom: 1rpx solid #c4c4c4; height: 88rpx; display: flex; justify-content: space-between; align-items: center;}
.list .left {display: flex; align-items: center;}
.list .left .icon {width: 38rpx; height: 38rpx; margin-right: 14rpx;}
.list .left .name {font-size: 28rpx;}
.list .right {margin-right: 66rpx; color: #9c9c9c;}
.list .icon_jump {position: absolute; right: 26rpx; width: 16rpx; height: 28rpx; top: 50%; transform: translateY(-50%);}

.footer {position: fixed; bottom: 0; z-index: 9; width: 100%; display: flex; justify-content: space-between; height: 88rpx; background-color: #fff; border-top: 1rpx solid #c4c4c4; border-bottom: 1rpx solid #c4c4c4;}
.footer .all_checked {display: flex; margin-left: 26rpx; justify-content: center; align-items: center;}
.footer .all_checked icon {margin-right: 26rpx;}
.footer .total_num {display: flex; margin-right: -4em; justify-content: center; align-items: center;}
.footer .total_num text {color: #E72839;}
.footer .btn {display: flex; width: 180rpx; background-color: #1EBC72; justify-content: center; align-items: center; font-size: 34rpx; color: #fff;}
